<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F11"
    tools:context=".SignUpActivity">


    <TextView
        android:id="@+id/Logintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Create New Account"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Please fill the form below to continue"
        android:textColor="#5A5757"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/roundedinput1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ket"></TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:hint="Username"
        android:inputType="text|textNoSuggestions"
        android:textColorHint="#7b8799"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundedinput1"
        app:layout_constraintStart_toStartOf="@+id/roundedinput1"></EditText>

    <TextView
        android:id="@+id/roundedinput2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput1"></TextView>

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:hint="Email Address"
        android:inputType="text|textNoSuggestions"
        android:textColorHint="#7b8799"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundedinput2"
        app:layout_constraintStart_toStartOf="@+id/roundedinput2"></EditText>

    <TextView
        android:id="@+id/roundedinput3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput2"></TextView>

    <EditText
        android:id="@+id/Phonenum"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:hint="Phone Number"
        android:inputType="text|textNoSuggestions"
        android:textColorHint="#7b8799"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundedinput3"
        app:layout_constraintStart_toStartOf="@+id/roundedinput3"></EditText>

    <TextView
        android:id="@+id/roundedinput4"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput3"></TextView>

    <TextView
        android:id="@+id/roundedinput5"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput3"></TextView>

    <RadioGroup
        android:id="@+id/radiogrup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput3">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="      Male"
            android:textColor="#7b8799"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="    Female"
            android:textColor="#7b8799"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/roundedinput5"
            app:layout_constraintStart_toStartOf="@+id/roundedinput5"></RadioButton>
    </RadioGroup>

    <TextView
        android:id="@+id/roundedinput7"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogrup"></TextView>

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:hint="Password"
        android:inputType="text|textNoSuggestions"
        android:textColorHint="#7b8799"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundedinput7"
        app:layout_constraintStart_toStartOf="@+id/roundedinput7"></EditText>

    <TextView
        android:id="@+id/btnLets"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedbtn"
        android:gravity="center"
        android:text="Let's Workout!"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedinput7"></TextView>

    <TextView
        android:id="@+id/HaveAnAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Have an Account?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLets"></TextView>

    <TextView
        android:id="@+id/SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Sign In"
        android:textColor="#4453c9"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"

        app:layout_constraintStart_toEndOf="@+id/HaveAnAcc"
        app:layout_constraintTop_toBottomOf="@+id/btnLets"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>